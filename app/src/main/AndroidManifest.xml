        <activity android:name=".activity.BrainBoosterActivity"/>
        <activity android:name=".activity.SmartBrainPlayActivity"/>
        <activity android:name=".activity.MindLogicLevelsActivity"/>
        <activity android:name=".activity.MindLogicPlayActivity"/>

