        <activity android:name=".activity.MemoryMatrixLevelsActivity"/>
        <activity android:name=".activity.MemoryMatrixPlayActivity"/>
        <activity android:name=".activity.ColorMatchLevelsActivity"/>
        <activity android:name=".activity.ColorMatchPlayActivity"/>
        <activity android:name=".activity.PatternLockLevelsActivity"/>
        <activity android:name=".activity.PatternLockPlayActivity"/>

        <!-- C LANGUAGE -->
        <activity android:name=".activity.CGameLevelsActivity"/>
        <activity android:name=".activity.CGamePlayActivity"/>

        <!-- QUIZ -->
        <activity android:name=".activity.QuickQuizLevelsActivity"/>

        <!-- DAILY -->
        <activity android:name=".activity.DailyChallengeActivity"/>
        <activity android:name=".activity.DailyChallengeResultActivity"/>

        <!-- EXTRA -->
        <activity android:name=".activity.PlayToLearnActivity"/>
        <activity android:name=".activity.ReactionSpeedPlayActivity"/>
        <activity android:name=".activity.TapThinkPlayActivity"/>

