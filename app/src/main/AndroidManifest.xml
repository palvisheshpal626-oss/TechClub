        android:supportsRtl="true"
        android:theme="@style/Theme.TechClub">

        <!-- SPLASH -->
        <activity
            android:name=".utils.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- HOME -->
        <activity
            android:name=".activity.HomeActivity"
            android:exported="true"/>

        <!-- GAME HUB -->
        <activity android:name=".utils.GamesListActivity"/>

        <!-- CODE GAMES -->
        <activity android:name=".activity.CodePlayLevelsActivity"/>
        <activity android:name=".activity.CodePlayPlayActivity"/>
        <activity android:name=".activity.CodeRushLevelsActivity"/>
        <activity android:name=".activity.CodeRushPlayActivity"/>
        <activity android:name=".activity.JavaGamePlayActivity"/>
        <activity android:name=".activity.PythonGamePlayActivity"/>

