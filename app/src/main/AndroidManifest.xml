        <activity android:name=".activity.SpeedMathPlayActivity"/>
        <activity android:name=".activity.UniversalGamePlayActivity"/>
        <activity android:name=".activity.SpotBugPlayActivity"/>

        <!-- ============ ADS ============ -->

        <!-- ADMOB -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6788180210698006~6068942603"/>

        <!-- FACEBOOK META -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <meta-data
            android:name="com.facebook.sdk.ClientToken"
            android:value="@string/facebook_client_token"/>

    </application>

</manifest>
